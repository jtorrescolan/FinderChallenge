doctype html
html(lang="es")
  head
    title Finder challenge
    meta(charset="utf-8")
    meta(viewport="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Proxima+Nova", rel="stylesheet", type="text/css")
    link(href="/vendor/pure/pure-min.css", rel="stylesheet")
    link(href="/vendor/awsomecomplete/awesomplete.css", rel="stylesheet")
    link(href="/styles/index.css", rel="stylesheet")

  body
    .app.pure-g
      header.pure-u-1
        .pure-u-1-3
          h1.logo Finder challenge
        .pure-u-15-24
          include blocks/search-form
      aside.filters.pure-u-1-4
      content.pure-u-3-4
      footer.pure-u-1

    //- third party libraries
    script(src="/vendor/jquery/dist/jquery.min.js")
    script(src="/vendor/awsomecomplete/awesomplete.min.js")

    //- app scripts self
    script(src="/scripts/global.js")
    script(src="/scripts/search-form.js")
    script(src="/scripts/sidebar.js")
    script(src="/scripts/content.js")
    script(src="/scripts/app.js")

    script(type="html/template")#template-list-filters
      h3 % title %
      ul.list-filters

    script(type="html/template")#template-list-filters-item
      .list-item(data-id='% id %')
        a(href="javascript:void(0)") % label %
    
    script(type="html/template")#template-list-content
      .content-item.pure-u-7-24(data-id="% id %")
        .image
          //-img(src="http://placehold.it/150x150")
          img(src="% img %")
        h3.title % title %
        p.description % teaser %